    ##### Create graphics text display area  ##### 
    my $G_GDS2FILE = $fileNameIn;
    my $entryGraphicsFile = $mwLeft -> Entry( 
        -background     => '#cccccc', 
        -font           => "-*-courier-medium-r-normal--*-140-*-*-*-*-*-*", 
        -foreground     => $FGCOLOR, 
