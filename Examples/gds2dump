    my $localDir = cwd(); 
    $G_DIRECTORY=basename($localDir); 

    #### spacer label 
    my $spacerLabel_1 = $mwLeft -> Label( 
        -background => $BGCOLOR,
        -text       => '    ', 
        -font       => "-*-times-bold-r-normal--*-140-*-*-*-*-*-*", 
        -anchor     => 'w', 
    ); 
    $spacerLabel_1 -> pack(@packList3);; 

    #### graphics file entry 
    my $graphicsFileLabel = $mwLeft -> Label( 
